pkgname=py3-colcon-powershell
_pkgname=colcon-powershell
pkgver=0.4.0
pkgrel=0
pkgdesc="Extension for colcon to provide PowerShell scripts."
url="http://colcon.readthedocs.io"
arch="noarch"
license="Apache-2.0"
depends="python3 py3-colcon-core"
makedepends="py3-setuptools"
checkdepends="py3-pip py3-pytest py3-flake8"
subpackages="$pkgname-doc"
source="${_pkgname}-${pkgver}.tar.gz::https://github.com/colcon/$_pkgname/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
        mkdir .venv
        python3 -m venv .venv
        . .venv/bin/activate
        python3 -m pip install -U build
        python3 -m build
        deactivate
}

check() {
        . .venv/bin/activate
        python3 -m pip install -U pip setuptools
        python3 -m pip install -e .[test]
        python3 -m pytest
        deactivate
}

package() {
        . .venv/bin/activate
        python3 -m pip install dist/colcon_powershell-"$pkgver"-py3-none-any.whl --prefix=/usr --root="$pkgdir"
        deactivate

        # Install license files
        install -Dm644 $builddir/LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

sha512sums="c91a9c037ef8b00b3e84049e02750b9ef38143d449d0801ee52bb2c91539985f9e9e30ebcf7649bed6a6232e8d1d5be04c8777ffcb6b42199177b9bf7276ca2b  colcon-powershell-0.4.0.tar.gz"
