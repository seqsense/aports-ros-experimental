pkgname=py3-colcon-recursive-crawl
_pkgname=colcon-recursive-crawl
pkgver=0.2.3
pkgrel=1
pkgdesc="Extension for colcon to recursively crawl for packages."
url="http://colcon.readthedocs.io"
arch="noarch"
license="Apache-2.0"
depends="python3 py3-colcon-core"
makedepends="py3-setuptools"
checkdepends="py3-pip py3-pytest py3-pytest-runner"
subpackages="$pkgname-doc"
source="${_pkgname}-${pkgver}.tar.gz::https://github.com/colcon/$_pkgname/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
        mkdir .venv
        python3 -m venv .venv
        . .venv/bin/activate
        python3 -m pip install -U build
        python3 -m build
        deactivate
}

check() {
        . .venv/bin/activate
        python3 -m pip install -U pip setuptools
        python3 -m pip install -e .[test]
        python3 -m pytest
        deactivate
}

package() {
        . .venv/bin/activate
        python3 -m pip install dist/colcon_recursive_crawl-"$pkgver"-py3-none-any.whl --prefix=/usr --root="$pkgdir" --no-deps
        deactivate

        # Install license files
        install -Dm644 $builddir/LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

sha512sums="2f294a87eff114a18a6a76a93b95b154b7af5f5813ccf41d9d04817881b524bc8fcbc280147131abdc947937f8f314d676f25931f4aa7f47aef8513fc61dfad6  colcon-recursive-crawl-0.2.3.tar.gz"
