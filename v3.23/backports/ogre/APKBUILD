# Contributor: Atsushi Watanabe <atsushi.w@ieee.org>
# Maintainer:
pkgname=ogre
pkgver=1.12.13
pkgrel=1
pkgdesc="OGRE is a scene-oriented, flexible 3D engine written in C++"
url="https://ogrecave.github.io/ogre/"
arch="all"
license="MIT"
depends=""
makedepends="
	boost-dev
	cmake
	freeimage-dev
	freetype-dev
	glu-dev
	gtest-dev
	libxaw-dev
	libxrandr-dev
	libxt-dev
	mesa-dev
	pugixml-dev
	tinyxml-dev
	zlib-dev
	zziplib-dev
"
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/OGRECave/ogre/archive/v$pkgver.tar.gz
	use-system-gtest.patch"

builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	mkdir -p build && cd build
	cmake .. \
		-DCMAKE_POLICY_VERSION_MINIMUM=3.5 \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_CXX_FLAGS="$CXXFLAGS -Wno-deprecated-copy" \
		-DCMAKE_C_FLAGS="$CFLAGS -Wno-error" \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DOGRE_BUILD_TESTS=ON \
		-DOGRE_INSTALL_SAMPLES=OFF \
		-DOGRE_INSTALL_SAMPLES_SOURCE=OFF \
    -DOGRE_BUILD_DEPENDENCIES=FALSE \
		-DBUILD_SHARED_LIBS=ON
	make
}

check() {
	cd "$builddir"/build
	make test
}

package() {
	cd "$builddir"/build
	make DESTDIR="$pkgdir" install

	install -Dm 0644 "$builddir"/LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

sha512sums="
