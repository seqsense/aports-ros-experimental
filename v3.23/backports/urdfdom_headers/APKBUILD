# Contributor: Atsushi Watanabe <atsushi.w@ieee.org>
# Maintainer:
pkgname=urdfdom_headers
pkgver=1.0.5
pkgrel=0
pkgdesc="URDF (U-Robot Description Format) parser"
url="http://ros.org/wiki/urdf"
arch="all"
options="!check"	# test is not provided
license="BSD-3-Clause"
depends=""
makedepends="cmake"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/ros/urdfdom_headers/archive/$pkgver.tar.gz"

builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	mkdir -p build && cd build
	cmake .. \
		-DCMAKE_POLICY_VERSION_MINIMUM=3.5 \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
}

package() {
	cd "$builddir"/build
	make DESTDIR="$pkgdir" install

	install -Dm 0644 "$builddir"/LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
sha512sums="
c16d83282c189d7720326ed0628c4b3359a859f45157e08f78ffa10a5607d01e6f64b2caa3b721ab9fcf2d83ee1240bc6f43ab484946e7a381122b27bd057b58  urdfdom_headers-1.0.5.tar.gz
"
