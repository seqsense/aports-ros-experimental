# Maintainer:
pkgname=py3-pysdl2-dll
_pkgname=pysdl2-dll
pkgver=2.32.0
pkgrel=0
pkgdesc="A package that bundles the SDL2 libraries for PySDL2 so they don't have to be installed manually"
url="https://github.com/a-hurst/pysdl2-dll"
arch="all"
license="MPL-2.0"
depends="sdl2 python3"
makedepends="python3-dev py-setuptools"
options="!check" #test skipped because of 'No binaries for this platform'
subpackages="$pkgname-doc"
source="$_pkgname-$pkgver.tar.gz::https://github.com/a-hurst/$_pkgname/archive/v$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver

build() {
  cd "$builddir"
  python3 setup.py build
}

package() {
  mkdir -p "$pkgdir"
  install -D -m 644 LICENSE \
    "$pkgdir"/usr/share/licenses/$pkgname/LICENSE

  cd "$builddir"
  python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="
4b3189f9620b59ed86da303e44817824e54b6c57e8b386ea6a6a1c72b6c57b8ca862c3aadaffef5c2130143ebf641c7a2db88096af1b04f21a97d089f4a57df7  pysdl2-dll-2.32.0.tar.gz
"
