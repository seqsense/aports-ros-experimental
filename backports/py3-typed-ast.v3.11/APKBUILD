# Maintainer:
pkgname=py3-typed-ast
pkgver=1.4.3
pkgrel=1
pkgdesc="Modified fork of CPython's ast module that parses `# type:` comments"
url="https://pypi.org/project/typed-ast://pypi.org/project/typed-ast"
arch="all"
license="Apache-2.0"
makedepends="python3-dev py-setuptools"
source="typed_ast-$pkgver.tar.gz::https://files.pythonhosted.org/packages/6e/08/c04a49ee26a94c1ec211e7b1e5f2971d692e04818ea67ef70f1e879cf525/typed_ast-$pkgver.tar.gz"
builddir="$srcdir/typed_ast-$pkgver"

build() {
    cd "$builddir"
	python3 setup.py build
}

check() {
    cd "$builddir"
	python3 setup.py test
}

package() {
	mkdir -p "$pkgdir"

	cd "$builddir"
	python3 setup.py install --prefix=/usr --root="$pkgdir" || return 1

	# Install license files
	install -mD644 "$builddir"/LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

sha512sums="7ac06e277c883afd1a7161601ffca0114aa63db257695a4bf4c64d819a7192fe52167edb57991aefc7accc6a9902b5faf2ba9e4032c4b9be31f1db7a091607c9  typed_ast-1.4.3.tar.gz"

